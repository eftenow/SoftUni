<main>
    <h1>Attach a new accessory</h1>
    <div class="form">
        <h2>{{cube.name}}</h2>
        <img class="cube" src={{cube.imageUrl}}>
        <form method="POST">
            <label for="accessory">Accessories</label>
            {{#if accessories}}
            <select id="accessory" name="accessory" />
            {{#each accessories}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
            <input type="submit" value="Attach">
            {{else}}
            <h3 class="italic">This cube has all available accessories so far or there are no available accessories at
                all...</h3>
            </select>
            {{/if}}

            
        </form>
        </h3>
        <a class="btn" href="/cube/details/{{cube._id}}">Back</a>
    </div>
</main>
</div>